








<div class="banner text-center" style="background-image: linear-gradient(90deg, rgba(30,31,44,0.7),rgba(0,0,0,1)), url(https://image.tmdb.org/t/p/original<%= Movie.order('RANDOM()').first.poster_url  %>);">
  <div class="container">
    <h1>Binge Master</h1>

    <p>Plan your next movie marathon binge</p>
    <%= link_to 'Create New Binge', new_list_path, class: 'btn btn-lg btn-primary' %>

    <div class="row">
      <div class="col-md-12">
         <div class="cards">
         <% @lists.each do |list| %>
           <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://image.tmdb.org/t/p/w500/<%# bookmark.movie.poster_url %>);">
             <h3><%= list.name %></h3><br>
              <p><%= link_to 'view', list_path(list) %></p>
            </div>
          <% end %>
      </div>
     
      </div>
    </div>
  </div>
</div>
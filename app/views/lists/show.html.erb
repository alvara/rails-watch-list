<div class="banner text-center" style="background-image: linear-gradient(90deg, rgba(30,31,44,0.8),rgba(0,0,0,1)), url(https://image.tmdb.org/t/p/original<%= @list.bookmarks.sample.movie.bg_url if @list.bookmarks.present?  %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p>Let the binge begin</p>
    <%= link_to 'Add a Movie', new_list_bookmark_path(@list), class: 'btn btn-primary btn-lg' %>

    <div class="cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://image.tmdb.org/t/p/w500/<%= bookmark.movie.poster_url %>);">
          <%= bookmark.movie.title %>
          <%= bookmark.comment %>
          <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: "Delete bookmark?"}, class: 'card-delete' do  %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>